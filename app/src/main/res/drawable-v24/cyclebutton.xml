<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#50AFF8" />
            <gradient android:angle="-90" android:startColor="#B09FECF5" android:endColor="#9DA8F8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#f1d0f5" />
            <solid android:color="#f1d0f5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <stroke android:width="1dip" android:color="#50AFF8" />
            <gradient android:angle="-90" android:startColor="#46509E" android:endColor="#46509E" />
        </shape>
    </item>
</selector>