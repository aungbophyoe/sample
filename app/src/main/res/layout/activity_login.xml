<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card_membership"
            android:layout_above="@+id/txtid"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership"
            android:layout_above="@+id/centerfrm"
            android:id="@+id/txtid"
            android:layout_marginBottom="35dp"
            android:layout_centerHorizontal="true"
            android:textStyle="italic|bold"
            android:textColor="#FFFFFF"
            android:textSize="45sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/centerfrm"
            android:layout_centerInParent="true">


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:hint="Username"
                    android:paddingLeft="10dp"
                    android:id="@+id/nameedit"
                    android:drawableStart="@drawable/usericon"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:ems="10"
                    android:textColorHint="#fff"/>



                <EditText
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:drawableStart="@drawable/passwordicon"
                    android:hint="Password"
                    android:paddingLeft="10dp"
                    android:id="@+id/passedit"
                    android:textColor="#fff"
                    android:ems="10"
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:inputType="textPassword"
                    android:textColorHint="#fff"/>


            <Button
                android:id="@+id/btnlogin"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@drawable/buttonbg"
                />


            <Button
                android:id="@+id/btnnewacc"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbg2"
                android:text="Create new account"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                />



        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_centerInParent="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fbicon"
                android:id="@+id/fbbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:id="@+id/fgtxtbtn"
                android:textColor="#FFFFFF"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>