<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="0dp"
        app:cardMaxElevation="5dp"
        android:layout_margin="0.1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:id="@+id/bplayout"
        android:background="#4E43E2"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"
        android:text="Basic Plan" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:text="Weekly - 450Ks"
        android:gravity="center"
        android:textColor="#F8EBE4E4"
        android:textAllCaps="false"
        android:id="@+id/btn1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:gravity="center"
        android:layout_margin="0dp"
        android:textColor="#F8EBE4E4"
        android:text="Monthly - 1,800Ks"
        android:textAllCaps="false"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="0dp"
        app:cardMaxElevation="5dp"
        android:layout_margin="0.1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:layout_below="@+id/bplayout"
        android:id="@+id/suplayout"
        android:background="#4E43E2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Super Plan" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yearly - 10,000Ks"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#F8EBE4E4"
                android:textAllCaps="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F8EBE4E4"
                android:text="Save 10,000Ks"
                android:textAllCaps="false"
                />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp"
        app:contentPadding="0dp"
        app:cardMaxElevation="5dp"
        android:layout_margin="0.1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:layout_below="@+id/suplayout"
        android:id="@+id/ppclayout"
        android:background="#4E43E2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Payper Chapter Plan" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#F8EBE4E4"
            android:gravity="center"
            android:text="1,000Ks/Chapter"
            android:textAllCaps="false"
            android:id="@+id/btn5"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>